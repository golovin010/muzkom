<%=form_for [:admin, @brand_group] do |f|%>
  <div class="clearfix mbm">
    <%= link_to "Отменить", admin_brand_groups_path, :class=>"submit-button right"%>
    <%=f.submit "Сохранить", :class=>"submit-button right mrs"%>
  </div>
  <fieldset>
    <div class="field clearfix">
      <div class="col2of4">
        <label for="">Название группы брендов</label>
        <%=f.text_field :name, :class=>"text"%>
      </div>
    </div>
    <label for=""><h3>Групповой курс валют</h3></label>
    <div class="clearfix pam">
      <%= form_tag change_admin_currencies_path do %>
      <div class="field">
        <strong>1 USD = </strong>
        <input type="text" name="currency[usd]" class="text" value="<%#= @usd.coef%>" style="width: 100px"/>
      </div>
      <div class="field">
        <strong>1 EUR = </strong>
        <input type="text" name="currency[eur]" class="text" value="<%#= @eur.coef%>" style="width: 100px"/>
      </div>
      <%#id = @brand.nil? ? 0 : @brand.id%>
      <%#= hidden_field :currency, :brand_id, :value => id%>
      <!-- <div class="field">
        <input type="submit" value="Сохранить" class="submit-button right">
      </div> -->
      <%end%>
    </div>
  </fieldset>
<%end%>

