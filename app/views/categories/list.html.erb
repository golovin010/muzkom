<% list = ""%>
<% @current_category.subcategories.visible.order('subcategories.priority').each{ |sc| list = list + "#{sc.name.strip}, "}%>
<% title sanitize(strip_tags("#{@current_category.name} | #{@keywords_text.text}").gsub("\"", "&quot;") )%>
<% meta_d sanitize(strip_tags("#{list} | #{@keywords_text.text}").gsub("\"", "&quot;") )%>
<% meta_k sanitize(strip_tags("#{list}").gsub("\"", "&quot;") )%>

<div class="clearfix">
  <div class="col1of5">
    <%=render "shared/brands_filter"%>
    <%=render "shared/range_search" %>
    <%=render "shared/catalog"%>
    <%=render "shared/news"%>
    <%=render "shared/left_banner"%>
  </div>
  <div class="col3of5">
    <br/>
    <center>
      <h1><%= @current_category.name %></h1>
    </center>
    <br/>
    <% @current_category.subcategories.visible.order('subcategories.priority').each do |subcategory| %>
      <div class="cat-block">
        <%= link_to (image_tag(subcategory.logo_url, :size => "200x200", :alt => subcategory.name)), category_path(subcategory) %><br/>
        <%= link_to subcategory.name, category_path(subcategory)%>
      </div>
    <% end %>
    <div class="mbs">
      <%= @current_category.text.html_safe%>
    </div>
  </div>


  <div class="col1of5">
    <%=render "shared/code_search"%>
    <%=render "shared/contacts"%>
    <%=render "shared/latest"%>
    <%=render "shared/right_banner"%>
  </div>
</div>