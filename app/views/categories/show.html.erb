<%meta_data @subcategory%>
<div class="clearfix">
  <div class="col1of5">
    <%=render "shared/brands_filter"%>
    <%=render "shared/catalog"%>
    <%=render "shared/news"%>
    <%=render "shared/left_banner"%>
  </div>
  <div class="col3of5">

      <div class="container mhs">
        <div class="mhm mvs">
          <h3 class="mbs"><%= @subcategory.name%> <%= @brand.name if @brand%></h3>
          <div class="breadcrumb">
            <%= link_to "Каталог товаров", root_path %> /
            <%= link_to @subcategory.category.name, "#"%> /
            <span><%= @subcategory.name%></span>
          </div>
          <div class="clearfix mbl">
          <% if !@brand%>
            <h4 class="mbs">Выбор по производителям:</h4>
            <div class="brand-list">
            <%@brands.each do |brand|%>
              <span class="brand">
                <%= link_to brand.name.downcase.capitalize, category_brand_path(@subcategory, brand)%>
                <span class="quantity">(<%= brand.products.by_subcategory(@subcategory).count%>)</span>
              </span>
            <%end%>
            </div>
          <%else%>
            <%= link_to "&larr; Все производители".html_safe, category_path(@subcategory)%>
          <%end%>
          </div>
          <div class="clearfix mbm">
            <div class="col1of2">
              <span>Сортировка по:</span>
              <a href="?order=price">цене</a>
              <a href="?order=name">названию</a>
              <a href="?order=date">дате</a>
              <!-- <a href=""><strong>АКЦИИ</strong></a> -->
            </div>
            <div class="col1of2">
              <div class="pagination right">
                <%= paginate @products%>
              </div>
            </div>
          </div>
          <hr color="#f5f5f5"/>
          <% @products.each do |product|%>
          <div class="product list">
            <div class="clearfix mbm">
              <div class="image">
                <%= link_to image_tag(product.image_url(:thumb)), product_path(product)%>
              </div>
              <div class="last-col pll">
                <p><strong><%=link_to product.name, product_path(product)%></strong></p>
                <p><%= product.short_description.html_safe%></p>
                <%= link_to "подробнее", product_path(product) %>
              </div>
            </div>
            <div class="clearfix">
              <div class="col1of2">
                <%= render "shared/product_price", :product => product%>
              </div>
              <div class="col1of2">
                <%= link_to "Купить", add_cart_path(:id=>product.id), :class=>"buy-button right", :method=>:put %>
              </div>
            </div>
          </div>
          <%end%>
          <div class="clearfix mbm">
            <div class="pagination right">
              <%= paginate @products%>
            </div>
          </div>
        </div>
      </div>  
    </div>
  <div class="col1of5">
    <%=render "shared/contacts"%>
    <%=render "shared/latest"%>
    <%=render "shared/right_banner"%>
  </div>
</div>