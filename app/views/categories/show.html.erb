<div class="clearfix">
  <div class="col1of5">
    <%=render "shared/brands_filter"%>
    <%=render "shared/catalog"%>
    <%=render "shared/news"%>
  </div>
  <div class="col3of5">

      <div class="container mhs">
        <div class="mhm mvs">
          <h3 class="mbs"><%= @subcategory.name%></h3>
          <div class="breadcrumb">
            <%= link_to "Главная", root_path %> /
            <%= link_to @subcategory.category.name, "#"%> /
            <span><%= @subcategory.name%></span>
          </div>
          <div class="clearfix mbm">
            <%@brand_list.each do |brand|%>
              <%=brand.name.downcase.capitalize%>
              <%= @products.count{|p| p.brand == brand}%> 
            <%end%>
          </div>
          
          <div class="clearfix mbm">
            <div class="col1of2">
              <span>Сортировка по:</span>
              <a href="">цене</a>
              <a href="">названию</a>
              <a href="">дате</a>
              <a href=""><strong>АКЦИИ</strong></a>
            </div>
            <div class="col1of2">
              <div class="pagination right">
                <%= paginate @products%>
              </div>
            </div>
          </div>
          <hr color="#f5f5f5"/>
          <% @products.each do |product|%>
          <div class="product list">
            <div class="clearfix mbm">
              <div class="image">
                <%= link_to image_for_product(product), product_path(product)%>
              </div>
              <div class="last-col pll">
                <p><strong><%=link_to product.name, product_path(product)%></strong></p>
                <p><%= product.short_description.html_safe%></p>
                <%= link_to "подробнее", product_path(product) %>
              </div>
            </div>
            <div class="clearfix">
              <div class="col1of2">
                <strong class="price">
                  <%= human_price product.converted_price(session[:currency])%>
                </strong> 
              </div>
              <div class="col1of2">
                <%= link_to "Купить", add_to_cart_path(product), :class=>"buy-button right", :method=>"put"%>
              </div>
            </div>
          </div>
          <%end%>
          <div class="clearfix mbm">
            <div class="pagination right">
              <%= paginate @products%>
            </div>
          </div>
        </div>
      </div>  
    </div>
  <div class="col1of5">
    <%=render "shared/contacts"%>
    <%=render "shared/latest"%>
    <p style="text-align: center;"><a href="http://muzkom.com.ua/page.php?id=4"><img width="150" height="230" alt="" src="http://muzkom.com.ua/banners/freedelivery.jpg"></a></p>

    <p style="text-align: center;"><a href="http://muzkom.com.ua/view_product.php?id=5335"><img width="150" height="200" alt="" src="http://muzkom.com.ua/banners/rvmb.jpg"></a></p>

  </div>
</div>