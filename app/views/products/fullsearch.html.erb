<% title "Muzkom - Интернет магазин оборудование для: DJ‘s, саунд-продюсеров, музыкантов, ночных клубов"%>
<% meta_d "DJ оборудование, студийное оборудование, музыкальные инструменты, звуковое и световое оборудование"%>
<% meta_k "звуковое оборудование и музыкальные инструменты"%>
<div class="clearfix">
  <div class="col1of5">
    <%=render "shared/brands_filter"%>
    <%=render "shared/catalog"%>
    <%=render "shared/news"%>
    <%=render "shared/left_banner"%>
  </div>
  <div class="col3of5">
    <div class="mhs">
      <div class="clearfix mbs">
        <%@products.each_with_index do |product, index|%>
          <div class="col1of2">
            <div class="product block<%= product_class index+1%>">
              <div class="clearfix mbm">
                <div class="image">
                  <%= link_to image_tag(product.image_url(:thumb)), product_path(product)%>
                </div>
                <div class="description last-col">
                  <p><%= link_to product.name, product_path(product)%></strong></p>
                  <p><%= product.short_description.truncate(75).html_safe%></p>
                  <%= link_to "подробнее >>", product_path(product) %>
                </div>
              </div>
              <div class="clearfix">
                <div class="col1of2">
                  <%= render "shared/product_price", :product => product%>
                </div>
                <div class="col1of2">
                  <%= link_to "Купить", add_cart_path(:id=>product.id), :class=>"buy-button right", :method=>"put"%>
                </div>
              </div>
            </div>
          </div>
          <%if (index+1)%2 == 0 %>
            </div><div class="clearfix mbs">
          <%end%>
        <%end%>
      </div>
      <div class="mbs">
        <%= @page.text.html_safe%>
      </div>
    </div>
  </div>
  <div class="col1of5">
    <%=render "shared/code_search"%>
    <%=render "shared/contacts"%>
    <%=render "shared/latest"%>
    <%=render "shared/right_banner"%>
  </div>
</div>