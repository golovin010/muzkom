<div class="clearfix">
  <div class="col1of5">
    <%=render "shared/brands_filter"%>
    <%=render "shared/catalog"%>
    <%=render "shared/news"%>
  </div>
  <div class="col3of5">
    <div class="container mhs">
      <div class="mhm mvs">
        <h3 class="mbs"><%= @product.name%></h3>
        <div class="breadcrumb">
          <%= link_to "Каталог товаров", root_path %> /
          <% unless @product.withdrawn?%>
          <a href=""><%= @product.subcategory.category.name%></a> /
          <%= link_to @product.subcategory.name, category_path(@product.subcategory)%> /
          <%else%>
            <%= link_to "Товары снятые с производства", withdrawn_brands_path%> /
          <%end%>
          <span><%= @product.name%></span>
        </div>

        <div class="clearfix mbm">
          <div class="col3of5">
            <div class="mrm mtl">
              <div class="mbm">
                <span class="muted">цена:</span>
                <span class="product-price">
                  <%= product_price(@product)%>
                </span>
              </div>
              <div class="mbs">
                <strong>Наличие: </strong> 
                <span class="success"><%= @product.status.name%></span>
              </div>
              <div class="mbs">
                <strong>Производитель: </strong> 
                <a href=""><%= @product.brand.name%></a>
              </div>
              <div class="mbl">
                <strong>Валюта:</strong>
                <%= form_tag change_currency_path, :method => :put, :style=>"display: inline;" do%>
                <select name="currency" id="" style="width: 80px" change="submitForm">
                  <option value="uah" <%= "selected" if session[:currency] == "uah"%>>ГРН</option>
                  <option value="usd" <%= "selected" if session[:currency] == "usd"%>>USD</option>
                  <option value="eur" <%= "selected" if session[:currency] == "eur"%>>EUR</option>
                </select>
                <%end%>
              </div>
              <%unless @product.withdrawn?%>
                <div class="mbl">
                  <%= link_to "Купить сейчас", add_to_cart_path(@product), :class=>"buy-button", :method=>"put"%>
                </div>
              <%end%>
              <div class="clearfix mbl">
                <div class="mbs">
                  <div class="fb-like" data-send="false" data-layout="button_count" data-width="150" data-show-faces="false"></div>
                </div>
                <div class="mbs">
                  <div id="vk_like"></div>
                  <script type="text/javascript">
                  VK.Widgets.Like("vk_like", {type: "button"});
                  </script>
                </div>
                <div class="mbs">
                  <a href="https://twitter.com/share" class="twitter-share-button" data-via="muzkom" data-lang="ru" data-related="muzkom" data-hashtags="muzkom">Твитнуть</a>
                  <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
                </div>
              </div>
              <div class="clearfix mbl">
                <div class="col1of2">
                  <%= link_to "/payment_delivery" do%>
                    <%= image_tag "icons/delivery.png", :class=>"left mrm", :size=>"36x36"%>
                    Бесплатная доставка
                  <%end%>
                </div>
                <div class="col1of2">
                  <%= link_to "/discount" do%>
                    <%= image_tag "icons/discount.png", :class=>"left mrm", :size=>"36x36"%>
                    Дисконтная программа
                  <%end%>
                </div>
              </div>
            </div>
          </div>
          <div class="col2of5">
            <div class="right">
              <div class="product-image-preview">
                <div class="inner">
                  <%= link_to image_tag(@product.image_url, :width=>"200"), @product.image_url, :for=>'photo0'%>
                </div>
              </div>
              <% if @product.photos.any?%>
              <div class="product-image-gallery" id="photos_container">
                <%=link_to image_tag(@product.image_url(:thumb)), @product.image_url, :class=>"photo", :id=>'photo0', :rel=>"lightbox"%>
                <% @product.photos.each do |photo|%>
                  <%=link_to image_tag(photo.image_url(:thumb)), photo.image_url, :class=>"photo", :id=>"photo#{photo.id}", :rel=>"lightbox" %>
                <%end%>
              </div>
              <%end%>
            </div>
          </div>
        </div>
        <div class="clearfix">
          <ul class="tab-switcher clearfix">
            <li><a href="#tab1" class="current">Описание</a></li>
            <% unless @product.videos.empty?%>
              <li><a href="#tab2">Видео</a></li>
            <%end%>
            <li><a href="#tab3">Комментарии (<%= @product.product_comments.count%>)</a></li>
          </ul>
          <div class="tab-container">
            <div id="tab1" class="tab">
              <%= @product.description.html_safe%>
            </div>
            <% unless @product.videos.empty?%>
            <div id="tab2" class="tab hidden">
              
            </div>
            <%end%>
            <div id="tab3" class="tab hidden">
              <% @product.product_comments.each do |comment|%>
              <div class="comment">
                <p><strong><%= comment.name%></strong> <small class="muted"><%= human_date comment.created_at%></small></p>
                <p><%= comment.text%></p>
              </div>
              <%end%>
              <%if @product.product_comments.empty?%>
              <p class="mbl">Не комментариев. Будьте первым, кто оставит комментарий.</p>
              <%end%>
              <h4 class="mbm">Добавить новый комментарий</h4>
              <%=form_for [@product, @comment] do |f|%>
              <div class="field">
                <label for="">Ваше имя</label>
                <%= f.text_field :name, :class=>"text"%>
              </div>
              <div class="field">
                <label for="">Комментарий</label>
                <%= f.text_area :text, :class => "text", :size=>"0x5"%>
              </div>
              <%= f.hidden_field :product_id, :value => @product.id%>
              <%= f.submit "Отправить", :class => "submit-button"%>
              <%end%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col1of5">
    <%=render "shared/contacts"%>
    <div class="container">
      <h2><span>Похожие товары</span></h2>
      <div class="pam">
        <% @similar.each do |product|%>
        <div class="by-center mbl">
          <div class="">
            <strong>
              <%= link_to product.name, product_path(product)%>
            </strong>
          </div>
          <div class="mbs">
            <%= image_tag(product.image_url(:thumb))%>
          </div>
          <strong>
            <%= human_price product.converted_price(session[:currency])%>
          </strong>
        </div>
        <%end%>
      </div>
    </div>
  </div>
</div>