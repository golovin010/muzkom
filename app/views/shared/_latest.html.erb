<div class="row white m-l-m10 m-t-20">
  <div class="col-md-12">
    <h2 class="opensans red"><i>Новые поступления</i></h2>
  </div>
    <% @latest_products.each do |product|%>
    <div class="col-md-3 p-b-10 col-sm-4 col-xs-12">
      <div class="visible-xs-block col-xs-6">
        <center><%= image_tag product.image_url(:thumb), :class=> "product-image"%>
        <%= render "shared/product_price", :product => product%>
      </div>
      <div class="visible-xs-block col-xs-6">
        <span class="product-name vcenter"><%= link_to product.name, product_path(product), :style=>"font-size:34px;line-height:32px;"%></span></center>
      </div>
      <div class="hidden-xs">
        <center><%= image_tag product.image_url(:thumb), :class=> "product-image"%>
        <%= render "shared/product_price", :product => product%>
        <span class="product-name" ><%= link_to product.name, product_path(product)%></span></center>
      </div>
    </div>
    <%end%>
</div>